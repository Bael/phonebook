<%- model_class = Shop -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Депо' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
    
      <th><%= model_class.human_attribute_name(:firstname) %></th>
      <th><%= model_class.human_attribute_name(:secondname) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:workphone) %></th>
      <!--
      <th><%= model_class.human_attribute_name(:owncellphone) %></th>
      <th><%= model_class.human_attribute_name(:workcellphone) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:icq) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:reception) %></th>
      <th><%= model_class.human_attribute_name(:fax) %></th>
      <th><%= model_class.human_attribute_name(:contract) %></th>
      <th><%= model_class.human_attribute_name(:okpo) %></th>
      <th><%= model_class.human_attribute_name(:tgnl) %></th>
      <th><%= model_class.human_attribute_name(:scancontract) %></th>
      <th><%= model_class.human_attribute_name(:station) %></th>
      <th><%= model_class.human_attribute_name(:railway_id) %></th>
      <th><%= model_class.human_attribute_name(:postaddress) %></th>
      <th><%= model_class.human_attribute_name(:legaladdress) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= link_to shop.id, shop_path(shop) %></td>
        <td><%= link_to shop.name, shop_path(shop) %></td>
    
        <td><%= shop.firstname %></td>
        <td><%= shop.secondname %></td>
        <td><%= shop.lastname %></td>
        <td><%= shop.title %></td>
        <td><%= shop.workphone %></td>
        <!--
        <td><%= shop.owncellphone %></td>
        <td><%= shop.workcellphone %></td>
        <td><%= shop.email %></td>
        <td><%= shop.icq %></td>
        <td><%= shop.description %></td>
        <td><%= shop.reception %></td>
        <td><%= shop.fax %></td>
        <td><%= shop.contract %></td>
        <td><%= shop.okpo %></td>
        <td><%= shop.tgnl %></td>
        <td><%= shop.scancontract %></td>
        <td><%= shop.station %></td>
        <td><%= shop.railway_id %></td>
        <td><%= shop.postaddress %></td>
        <td><%= shop.legaladdress %></td>
        <td><%=l shop.created_at %></td>
        -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shop_path(shop), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shop_path(shop),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shop_path,
            :class => 'btn btn-primary' %>
