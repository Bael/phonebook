<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Организации' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
     
      <th><%= model_class.human_attribute_name(:firstname) %></th>
      <th><%= model_class.human_attribute_name(:secondname) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <!--
      <th><%= model_class.human_attribute_name(:workphone) %></th>
      <th><%= model_class.human_attribute_name(:owncellphone) %></th>
      <th><%= model_class.human_attribute_name(:workcellphone) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:icq) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:reception) %></th>
      <th><%= model_class.human_attribute_name(:fax) %></th>
      <th><%= model_class.human_attribute_name(:contract) %></th>
      <th><%= model_class.human_attribute_name(:okpo) %></th>
      <th><%= model_class.human_attribute_name(:scancontract) %></th>
      <th><%= model_class.human_attribute_name(:postaddress) %></th>
      <th><%= model_class.human_attribute_name(:legaladdress) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.id, company_path(company) %></td>
        <td><%= link_to company.name, company_path(company) %></td>
     
        <td><%= company.firstname %></td>
        <td><%= company.secondname %></td>
        <td><%= company.lastname %></td>
        <td><%= company.title %></td>
        <!--
        <td><%= company.workphone %></td>
        <td><%= company.owncellphone %></td>
        <td><%= company.workcellphone %></td>
        <td><%= company.email %></td>
        <td><%= company.icq %></td>
        <td><%= company.description %></td>
        <td><%= company.reception %></td>
        <td><%= company.fax %></td>
        <td><%= company.contract %></td>
        <td><%= company.okpo %></td>
        <td><%= company.scancontract %></td>
        <td><%= company.postaddress %></td>
        <td><%= company.legaladdress %></td>
        <td><%=l company.created_at %></td>
        -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_company_path(company), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      company_path(company),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_company_path,
            :class => 'btn btn-primary' %>
