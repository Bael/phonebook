<% @companies.each do |company| %>
  <tr>
    <td><%= company.firstname %></td>
    <td><%= company.secondname %></td>
    <td><%= company.lastname %></td>
    <td><%= company.title %></td>
    <td><%= company.workphone %></td>
    <td><%= company.owncellphone %></td>
    <td><%= company.workcellphone %></td>
    <td><%= company.email %></td>
    <td><%= company.icq %></td>
    <td><%= company.description %></td>
    <td><%= company.reception %></td>
    <td><%= company.fax %></td>
    <td><%= company.name %></td>
    <td><%= company.contract %></td>
    <td><%= company.okpo %></td>
    <td><%= company.scancontract %></td>
    <td><%= company.postaddress %></td>
    <td><%= company.legaladdress %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

