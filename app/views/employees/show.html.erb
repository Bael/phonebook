<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @employee.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:secondname) %>:</strong></dt>
  <dd><%= @employee.secondname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @employee.lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @employee.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:workphone) %>:</strong></dt>
  <dd><%= @employee.workphone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owncellphone) %>:</strong></dt>
  <dd><%= @employee.owncellphone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:workcellphone) %>:</strong></dt>
  <dd><%= @employee.workcellphone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @employee.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:icq) %>:</strong></dt>
  <dd><%= @employee.icq %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @employee.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
